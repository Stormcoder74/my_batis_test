<!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stormcoder.mapper.SubscriberMapper">
    <select id="getSubscriberById" parameterType="java.lang.Integer" resultType="com.stormcoder.domain.Subscriber">
        select * from subscriber where id = #{id};  <!-- поле в фигурных скобках это параметр, который прилетел в метод. Если это Map — то {имя} это ключ к переменной. Если в метод передаем EntityBean то {имя} — это название переменной данного bean.-->
    </select>

    <select id="getSubscribers" resultType="com.stormcoder.domain.Subscriber">
        select * from subscriber;
    </select>
</mapper>